# ==================== ENVIRONMENT CONFIGURATION ====================
NODE_ENV=development
PORT=5000

# ==================== LOGGING ====================
# Set to true to enable console logs and morgan HTTP logging
ENABLE_LOGS=false

# ==================== DATABASE ====================
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/savitri_shipping?retryWrites=true&w=majority"

# ==================== JWT CONFIGURATION ====================
# IMPORTANT: Change these to strong random strings in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ==================== URL CONFIGURATION ====================
# Set these to actual domains in production
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:5173

# ==================== CORS ====================
# Comma-separated list of additional allowed origins (optional)
# ADDITIONAL_CORS_ORIGINS=https://example.com,https://staging.example.com

# ==================== EMAIL CONFIGURATION ====================
EMAIL_SERVICE=google
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM="Savitri Shipping <noreply@savitrishipping.in>"

# ==================== SMS CONFIGURATION ====================
# Options: master (dev only - uses SMS_MASTER_OTP), msg91 (production)
SMS_SERVICE=master
SMS_MASTER_OTP=123456
# MSG91_API_KEY=your_msg91_api_key

# ==================== FILE UPLOAD ====================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# ==================== RATE LIMITING ====================
# Window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window (default: 100)
RATE_LIMIT_MAX=100

# ==================== COMPANY INFO ====================
COMPANY_NAME="Savitri Shipping"
COMPANY_DOMAIN="savitrishipping.in"

# ==================== CLOUDINARY ====================
# Image hosting service for boat images, avatars, payment proofs
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
