# Server Configuration
PORT=5000
NODE_ENV=development

# Database (Cloud PostgreSQL)
# Option 1: Supabase
DATABASE_URL="postgresql://postgres.[ref]:[password]@aws-0-ap-south-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[ref]:[password]@aws-0-ap-south-1.pooler.supabase.com:5432/postgres"

# Option 2: Neon
# DATABASE_URL="postgresql://[user]:[password]@[host].neon.tech/neondb?sslmode=require"
# DIRECT_URL="postgresql://[user]:[password]@[host].neon.tech/neondb?sslmode=require"

# Option 3: Local (for development)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/savitri_shipping"
# DIRECT_URL="postgresql://postgres:password@localhost:5432/savitri_shipping"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Frontend URLs (Optional in Codespaces - auto-detected)
# Only set these if you need to override auto-detection
# BACKEND_URL=http://localhost:5000
# FRONTEND_URL=http://localhost:3000
# ADMIN_URL=http://localhost:5173

# Additional CORS Origins (comma-separated)
# ADDITIONAL_CORS_ORIGINS=https://example.com,https://app.example.com

# Email Service Configuration
EMAIL_SERVICE=google
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Savitri Shipping <noreply@savitrishipping.in>"

# SMS Service Configuration
SMS_SERVICE=master
SMS_MASTER_OTP=123456
# MSG91_API_KEY=your-msg91-api-key

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Company Information (Defaults)
COMPANY_NAME="Savitri Shipping"
COMPANY_DOMAIN="savitrishipping.in"